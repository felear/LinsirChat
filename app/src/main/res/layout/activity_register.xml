<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.foxconn.linsirchat.module.main.ui.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="用户注册"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_redbag_back_normal"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <EditText
                android:id="@+id/edit_tel"
                style="@style/Edit_Reg"
                android:hint="请输入手机号码"
                android:inputType="number" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_code"
                    style="@style/Edit_Reg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:hint="请输入验证码"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/btn_code"
                    style="@style/btn_code"
                    android:text="获取验证码" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_pwd"
                style="@style/Edit_Reg"
                android:hint="请输入密码"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edit_nick"
                style="@style/Edit_Reg"
                android:hint="请输入姓名" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_reg_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="男"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_reg_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="女"
                        android:textSize="16sp" />
                </RadioGroup>

                <EditText
                    android:id="@+id/edit_age"
                    style="@style/Edit_Reg"
                    android:layout_width="120dp"
                    android:layout_alignParentRight="true"
                    android:hint="请输入年龄"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/edit_age"
                    android:text="年龄    "
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/sel_check"
                    android:checked="true"
                    android:onClick="onClick"
                    android:text="接收并同意"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_reg_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:text="注册协议"
                    android:textColor="@color/sel_lgon_text"
                    android:textSize="13sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/sel_code_bg"
                android:onClick="onClick"
                android:text="注册"
                android:enabled="false"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_reg_tip"
                android:textColor="#e20"
                android:text="用户名不存在！"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
