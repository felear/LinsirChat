<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.foxconn.linsirchat.module.me.ui.ModifyUserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_modify_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="修改信息"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:drawableLeft="@mipmap/ic_redbag_back_normal"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="取消"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_me_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edit_modify"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="12dp"
        android:paddingBottom="5dp"
        android:textSize="14sp"
        android:textColor="#222"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="#14D212"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp" />

    <TextView
        android:id="@+id/tv_modify_tips"
        android:layout_margin="10dp"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
